{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@layout/*": ["./src/components/layout/*"],
			"@sections/*": ["./src/sections/*"],
			"@data/*": ["./src/data/*"],
			"@store/*": ["./src/store/*"],
			"@styles/*": ["./src/styles/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@pages/*": ["./src/pages/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
